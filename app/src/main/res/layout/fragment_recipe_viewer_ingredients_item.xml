<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/movie_detail_row_margin_h"
    android:layout_marginStart="@dimen/movie_detail_row_margin_h"
    android:layout_marginTop="@dimen/movie_detail_subrow_margin_v"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/quantity_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/movie_detail_row_margin_h"
        android:layout_marginStart="@dimen/movie_detail_row_margin_h"
        android:gravity="start|center_vertical"
        android:textSize="@dimen/movie_detail_paragraph_text_size"
        app:layout_constraintEnd_toStartOf="@id/ingredient_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2.5 Kg" />

    <TextView
        android:id="@+id/ingredient_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/movie_detail_row_margin_h"
        android:layout_marginStart="@dimen/movie_detail_row_margin_h"
        android:gravity="start|center_vertical"
        android:textSize="@dimen/movie_detail_paragraph_text_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/quantity_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/quantity_tv"
        tools:text="Watermelons" />

</android.support.constraint.ConstraintLayout>